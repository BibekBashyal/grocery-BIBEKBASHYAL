@model grocery.Models.ViewModel.CategoryViewModel

@{

    Layout = null;
}

<script type="text/javascript">
    function showimagepreview1(input) {
        if (input.files && input.files[0]) {
            var filerdr = new FileReader();
            filerdr.onload = function (e) {
                $('#smimg').attr('src', e.target.result);
            }
            filerdr.readAsDataURL(input.files[0]);
        }
    }
</script>




                <div class="box-body">
                    @using (Html.BeginForm("AddOrEdit", "AdminUser", FormMethod.Post, new { @enctype = "multipart/form-data", @onsubmit = "return SubmitForm(this)" }))
                    {


                        @Html.HiddenFor(model => model.CategoryId)

                        <div class="form-group">
                            @Html.LabelFor(model => model.CategoryName, new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.CategoryName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CategoryName)
                        </div>


                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-primary" />
                            <input type="reset" value="Reset" class="btn btn-info" />
                        </div>


                    }



                </div>
          